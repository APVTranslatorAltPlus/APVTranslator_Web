<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - APV Translator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")  
    @Styles.Render("~/bundles/angular-custom_css")
    @Styles.Render("~/bundles/angular_material_css")
    @Scripts.Render("~/bundles/angular_js")
    @Scripts.Render("~/bundles/angular-animate_js")
    @Scripts.Render("~/bundles/angular-aria_js")
    @Scripts.Render("~/bundles/angular-material_js")
    @Scripts.Render("~/bundles/angular-grid_js")
    @Scripts.Render("~/bundles/loading_js")
    @Styles.Render("~/bundles/loading_css")
    @Scripts.Render("~/bundles/commonjs")
    @Scripts.Render("~/bundles/script/_Layout")
    @Styles.Render("~/bundles/content/_Layout")
    @*@Scripts.Render("~/bundles/modernizr")*@
    @Scripts.Render("~/bundles/angular-tag-input_js")
    @Styles.Render("~/bundles/angular-tag-input_css")
    @Styles.Render("~/bundles/angular-bootstrap-datetimepicker_css")
    @Scripts.Render("~/bundles/angular-bootstrap-datetimepicker_js")
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/js/bootstrap-datetimepicker.min.js"></script>*@
    <style>
        .onHoverChangeColor:hover{
   background-color:#c56767 !important;
   color:white;
}
        /*.onHoverChangeColor:{
   background-color:#c56767 !important;
}*/
    </style>
    <link rel="icon" href="~/favicon.ico">
</head>
<body ng-app="apvApp">
    <div ng-controller="ctTopbar" class="apv-navbar navbar layout-top navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header" id="collapseParent">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" id="collapseButton" onclick="openExpandedArea();">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("APVTranslator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand onHoverChangeColor" })
            </div>
            <div class="navbar-collapse collapse" id="collapseMenu">
                <ul class="nav navbar-nav">
                 @*   <li>@Html.ActionLink("Dashboard", "Index", "Home", new { @class = "onHoverChangeColor" })</li>*@
                    <li ><a id="dashboard" class="onHoverChangeColor" onclick="closeExpandedArea(); angular.element(document.getElementById('Homecontroller')).scope().loadListProject();">Dashboard</a></li>
                    @*<li>@Html.ActionLink("Help", "About", "Home", new { @class = "onHoverChangeColor" })</li>*@
                  
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <div class="main body-content" style="margin-top:50px;" >
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Month/@DateTime.Now.Year - APV Translator Tool</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
